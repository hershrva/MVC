<div class="container mt-5">
  <h2>Your Blog Posts</h2>
  <div class="row">
    {{#each blogPosts}}
      <div class="col-lg-4 col-md-6">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><a href="/blog/{{id}}">{{title}}</a></h5>
            <p class="card-text">{{dateCreated}}</p>
            <a href="/dashboard/edit/{{id}}" class="btn btn-primary">Edit</a>
            <form action="/dashboard/delete/{{id}}" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  <a href="/dashboard/new" class="btn btn-success mt-3">Add New Blog Post</a>
</div>
